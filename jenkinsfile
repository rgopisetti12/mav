node('master') 
{
    stage('ContinuousDownload_Loans') 
    {
        git 'https://github.com/rgopisetti12/mav.git'
    }
    stage('ContinuousBuild_Loans') 
    {
        sh 'mvn package'
    }
    stage('ContinuousDeployment_Loans') 
    {
        sh 'scp /home/ubuntu/.jenkins/workspace/MultibranchPipeline_master/webapp/target/webapp.war ubuntu@172.31.21.177:/var/lib/tomcat8/webapps/testapp.war'
    }
    stage('ContinuousTesting_Loans') 
    {
        git 'https://github.com/rgopisetti12/FunctionalTesting'
        sh 'java -jar /home/ubuntu/.jenkins/workspace/MultibranchPipeline_master/testing.jar'
    }
    stage('ContinuousDelivery_Loans') 
    {
        sh 'scp /home/ubuntu/.jenkins/workspace/MultibranchPipeline_master/webapp/target/webapp.war ubuntu@172.31.28.197:/var/lib/tomcat8/webapps/prodapp.war'
    }
}
