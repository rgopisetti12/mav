node('master') 
{
    stage('ContinuousDownload') 
    {
        git 'https://github.com/rgopisetti12/mav.git'
    }
    stage('ContinuousBuild') 
    {
        sh 'mvn package'
    }
    stage('ContinuousDeployment') 
    {
        sh 'scp /home/ubuntu/.jenkins/workspace/ScriptedPipeline/webapp/target/webapp.war ubuntu@172.31.21.177:/var/lib/tomcat8/webapps/testapp.war'
    }
    stage('ContinuousTesting') 
    {
        git 'https://github.com/rgopisetti12/Testcases/tree/main/FunctionalTesting'
        sh 'java -jar /home/ubuntu/.jenkins/workspace/ScriptedPipeline/testing.jar'
    }
    stage('ContinuousDelivery') 
    {
        sh 'scp /home/ubuntu/.jenkins/workspace/ScriptedPipeline/webapp/target/webapp.war ubuntu@172.31.28.197:/var/lib/tomcat8/webapps/prodapp.war'
    }
}
